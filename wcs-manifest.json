{
  "title": "noi.bz.it website stats",
  "shortName": "noi-stats",
  "description": "Showing statistics about the visits of the 'Amministrazione Trasparente/Transaprente Verwaltung' pages of the noi.bz.it website: noi.bz.it/de/transparente-verwaltung and noi.bz.it/it/amministrazione-trasparente",
  "descriptionAbstract": "Show website visit statistics",
  "license": "AGPL-3.0-or-later",
  "repositoryUrl": "https://github.com/noi-techpark/webcomp-website-stats.git",
  "copyrightHolders": [
    {
      "name": "NOI",
      "email": "info@noi.bz.it",
      "organization": "NOI S.p.A",
      "organizationUrl": "https://noi.bz.it"
    }
  ],
  "authors": [
    {
      "name": "Simon Dalvai",
      "email": "s.dalvai@noi.bz.it",
      "organization": "NOI S.p.A",
      "organizationUrl": "https://noi.bz.it"
    }
  ],
  "image": "wcs-logo.png",
  "searchTags": [],
  "dist": {
    "basePath": "dist",
    "files": ["webcomp-website-stats.min.js"],
    "scripts": []
  },
  "configuration": {
    "tagName": "website-stats",
    "options": [
      {
        "key": "text",
        "type": "text",
        "label": "Text that will appear left to the value",
        "required": false,
        "options": {
          "default": "Website statistics"
        }
      },
      {
        "key": "websites",
        "type": "text",
        "label": "The websites of which the data will be shown. Separate multiple website with a comma. If multiple websites are defined, the sum of all values is shown",
        "required": false,
        "options": {
          "default": "noi.bz.it/de/ueber-uns/transparente-verwaltung, noi.bz.it/it/chi-siamo/societa-trasparente, noi.bz.it/it/amministrazione-trasparente, noi.bz.it/de/transparente-verwaltung"
        }
      },
      {
        "key": "period",
        "type": "select",
        "label": "Time frame of the statistics",
        "required": false,
        "options": {
          "values": [
            "dailyVisits",
            "weeklyVisits",
            "monthlyVisits",
            "yearlyVisits"
          ],
          "default": "yearlyVisits"
        }
      },
      {
        "key": "fontSize",
        "type": "number",
        "label": "Size of the font in px",
        "required": false,
        "options": {
          "default": 24
        }
      }

    ]
  }
}
